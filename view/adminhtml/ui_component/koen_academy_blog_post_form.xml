<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">koen_academy_blog_post_form.post_form_data_source</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>

    <settings>
        <label>General Information</label>
        <buttons>
            <button name="back"> <!-- <button name="back" class="Koen\AcademyBlogAdminhtml\Block\Adminhtml\Post\Edit\BackButton"/> -->
                <label translate="true">Back</label>
                <url path="koen_academy_blog/post/index"/>
            </button>
            <button name="delete" class="Koen\AcademyBlogAdminhtml\Block\Adminhtml\Post\Edit\DeleteButton"/>
            <button name="save" class="Koen\AcademyBlogAdminhtml\Block\Adminhtml\Post\Edit\SaveButton"/>
            <button name="save_and_continue" class="Koen\AcademyBlogAdminhtml\Block\Adminhtml\Post\Edit\SaveAndContinueButton"/>
        </buttons>
        <namespace>koen_academy_blog_post_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>koen_academy_blog_post_form.post_form_data_source</dep>
        </deps>
    </settings>

    <dataSource name="post_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider name="post_form_data_source" class="Koen\AcademyBlogAdminhtml\Model\Post\DataProvider">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="general">
        <settings>
            <label>General</label>
        </settings>

        <field name="title" formElement="input" sortOrder="1">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Title</label>
                <dataScope>title</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="url_key" formElement="input" sortOrder="2">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">URL key</label>
                <dataScope>title</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>

        <field name="body" formElement="wysiwyg" sortOrder="3">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Body</label>
                <dataScope>body</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
    </fieldset>
</form>
